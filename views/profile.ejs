<!doctype html>
<html>
<head>
    <title>Write a Story!</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
  <% if(lines === undefined){lines = ""} %>
<div class="container">

    <div class="page-header text-center">
        <h1>Story Board</h1>
        <a href="/profile" class="btn btn-default btn-sm deleteAuthorLines">Delete Your Lines</a>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <!-- <a href="/profile" class="btn btn-default btn-sm deleteAll">Delete Story</a> -->
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
          <div class="lines">
          <% for(var i=0; i<lines.length; i++) {%>
              <p class="storyLine"><%= lines[i].line %><span class="author"> (<%= lines[i].name %>)</span></p>
          <% } %>
          </div>

          <h3>Add a line to the story</h3>
        <% if (user.local.email) { %>
          <form action="/postLine" method="POST">
            <input type="text" placeholder="Name" name="name">
            <input type="text" placeholder="Story Line" name="line">
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>

</div>

<script src="main.js"></script>

</body>
</html>
